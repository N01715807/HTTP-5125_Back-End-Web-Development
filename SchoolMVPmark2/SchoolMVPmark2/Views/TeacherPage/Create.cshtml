@model SchoolMVPmark2.Models.Teacher

<h2>Add New Teacher</h2>

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

<form asp-action="Create" method="post">
    <div>
        <label>First Name:</label>
        <input asp-for="TeacherFname" required />
    </div>
    <div>
        <label>Last Name:</label>
        <input asp-for="TeacherLname" required />
    </div>
    <div>
        <label>Employee Number:</label>
        <input asp-for="Employeenumber" required />
    </div>
    <div>
        <label>Hire Date:</label>
        <input asp-for="Hiredate" type="date" required />
    </div>
    <div>
        <label>Salary:</label>
        <input asp-for="Salary" type="number" step="0.01" required />
    </div>
    <button type="submit">Add Teacher</button>
</form>

<a href="/TeacherPage/List">← Back to Teacher List</a>
