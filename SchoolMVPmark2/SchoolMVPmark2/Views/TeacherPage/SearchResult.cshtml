@model List<SchoolMVPmark2.Models.Teacher>

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <p>No teachers found in this date range.</p>
}
else
{
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Hire Date</th>
        </tr>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFname @teacher.TeacherLname</td>
                <td>@teacher.Hiredate.ToShortDateString()</td>
            </tr>
        }
    </table>
}

